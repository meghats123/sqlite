<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView

            android:text="pmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pmodel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="pcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:text="pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="psellername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/psellername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:entries="@array/brandList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <TextView
            android:text="price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Spinner
            android:entries="@array/typeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>
        <TextView
            android:text="Oname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Oname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Omobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/Omobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/submit"
            android:text="SUBMIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/search"
            android:text="SEARCH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</ScrollView>